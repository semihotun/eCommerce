@{
    ViewBag.Title = "Catalog";
    Layout = "~/Areas/Web/Views/Shared/_Layout.cshtml";
}

<div class="loginContainer">
    <div class="col-md-6">
        <div class="col-md-12 loginHeader"><h2 class="loginHeaderTitle">Login</h2></div>
        <form>
            <div class="form-group row ">
                <span>Email</span>
                <input type="text" class="form-control" name="Email" />
            </div>
            <div class="form-group row ">
                <span>Password</span>
                <input type="text" class="form-control" name="Password" />
            </div>
            <div class="form-group row ">
                <button onclick="Login(event)" class="primary-btn col-md-12">Login</button>
            </div>
        </form>
    </div>
</div>
@* http://localhost:9901/Web/Account/Login *@
<script src="~/Web/login.js"></script>