@model Entities.RequestModel.AdminAggregate.AdminAuths.LoginReqModel
@{
    Layout = "~/Areas/AdminAuth/Views/Shared/_AdminLoginRegisterLayout.cshtml";
}
@using (Html.BeginForm("Login", "AdminLogin", FormMethod.Post))
{
    <div class="ml-auto mr-auto justify-content-center w-50">
        <div class="form-group row ">
            <span>Email</span>
            @Html.TextBoxFor(x => x.Email, new { @class = "form-control " })
        </div>
        <div class="form-group row ">
            <span>Password</span>
            @Html.PasswordFor(x => x.Password, new { @class = "form-control " })
        </div>
        <div class="form-group row">
            <input type="submit" value="Giriş Yap" class="customBtn" />
        </div>
    </div>
}