@model Entities.ViewModels.AdminViewModel.AdminProduct.ProductVM
@{
    ViewBag.Title = "AttrCombinationInsert";
    Layout = "";
}
<div class="mt-5">
    <h2 style="font-weight:100;">Kombinasyonlar</h2>
    <div class="row">
        <div class="col-md-3">
            <button type="button" class="btn btn-outline-default" onclick="GenerateAllCombination()">Tüm Kombinasyonları Ekle</button>  
        </div>
        <div class="col-md-5">
            <!-- Modal -->
            <div class="modal bd-example-modal-lg" tabindex="35" id="Modal" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true" style="height:auto;">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h3 class="modal-title" id="exampleModalLabel">Kombinasyon Ekle</h3>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <table>
                                <tbody></tbody>
                            </table>
                        </div>
                        <div class="modal-footer">
                            <input type="submit" class="btn btn-default form-control col-md-5" value="Kaydet" id="register" style="color:white;">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
