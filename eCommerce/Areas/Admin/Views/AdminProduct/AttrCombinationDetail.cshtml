@model Entities.ViewModels.AdminViewModel.AdminProduct.ProductAttributeCombinationVM
@{
    ViewData["Title"] = "AttrCombinationDetail";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutPage.cshtml";
}
<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-2" style="float:right;margin-right:23px;">
                <input type="submit" class="productSave" value="Kaydet" form="attrCombinationPage" />
            </div>
            <div class="card ">
                <div class="card-header">
                    <div class="col-md-4" style="float:left;">
                        <h1 class="card-title" style="margin-top: 8px;">
                            Combination Bilgisi
                        </h1>
                    </div>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("AttrCombinationDetail", "AdminProduct", FormMethod.Post, new { @Id = "attrCombinationPage" }))
                    {
                        @Html.HiddenFor(x => x.Id)
                        @Html.HiddenFor(x => x.AttributesXml)
                        @Html.HiddenFor(x => x.ManufacturerPartNumber)
                        @Html.HiddenFor(x => x.AttributesXml)
                        <div class="form-group col-md-12">
                            @Html.LabelFor(x => x.Product.ProductName, "Ürün ismi =", new { @class = "control-label col-md-2 " })
                        </div>
                        <div class="form-group col-md-12">
                            @Html.LabelFor(x => x.AttributesXml, "Ürün kombinasyonu =", new { @class = "control-label col-md-2 " })
                            <div class="col-md-10">
                                @Html.Raw(@Model.AttributesXml)
                            </div>
                        </div>
                        <div class="form-group col-md-12">
                            @Html.LabelFor(x => x.Sku, "Sku =", new { @class = "control-label col-md-2 " })
                            <div class="col-md-10">
                                @Html.TextBoxFor(model => model.Sku, new { @class = "form-control  col-md-8" })
                            </div>
                        </div>
                        <div class="form-group col-md-12">
                            @Html.LabelFor(x => x.Gtin, "Gtin =", new { @class = "control-label col-md-2 " })
                            <div class="col-md-10">
                                @Html.TextBoxFor(model => model.Gtin, new { @class = "form-control  col-md-8" })
                            </div>
                        </div>
                    }
                    <br /> <br />
                </div>
            </div>
        </div>
    </div>
</div>