@model Entities.ViewModels.AdminViewModel.Showcase.ShowCaseCreateOrUpdateVM

@{
    ViewBag.Title = "ShowcaseCreate";
    Layout = "~/Views/Shared/_AdminLayoutPage1.cshtml";
}


<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card ">
                <div class="card-header">
                    <div class="col-md-4" style="float:left;">
                        <h2 class="card-title">Showcase Ekle</h2>
                    </div>
                    <div class="col-md-8" style="float:right;">

                    </div>
                </div>
                <div class="card-body">
                    <div class="tab-content">
                        <div id="home" class="tab-pane  active ">

                            @if (ViewBag.Message != null)
                            {
                                <script>
                                pushalert("@ViewBag.Message","@ViewBag.AlertType");

                                </script>
                            }

                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-horizontal">
                                    <hr />
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="form-group">
                                        <div class="col-md-2"> Sıra</div>

                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.ShowCaseOrder, new { htmlAttributes = new { @class = "form-control col-md-6" } })
                                            @Html.ValidationMessageFor(model => model.ShowCaseOrder, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-2"> Başlık</div>
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.ShowCaseTitle, new { htmlAttributes = new { @class = "form-control col-md-6" } })
                                            @Html.ValidationMessageFor(model => model.ShowCaseTitle, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-2"> Show Case Tipi</div>
                                        <div class="col-md-10">
                                            @Html.DropDownListFor(x => x.ShowCaseType, Model.ShowCaseTypeList, new { @class = "form-control col-md-6" })

                                            @Html.ValidationMessageFor(model => model.ShowCaseType, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-10">
                                            <input type="submit" value="Kaydet" class="btn btn-default" />
                                        </div>
                                    </div>
                                </div>
                            }
                            <br /> <br />
                            <div>
                                @Html.ActionLink("Geri Dön", "ShowcaseList")
                            </div>
                        </div>



                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
