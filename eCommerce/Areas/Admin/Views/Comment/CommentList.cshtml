@model Entities.Concrete.CommentsAggregate.Comment
@{
    ViewData["Title"] = "CommentList";
    Layout = "~/Views/Shared/_AdminLayoutPage1.cshtml";
}
<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card ">
                <div class="card-header">
                    <div class="col-md-4" style="float:left;">
                        <h2 class="card-title">Yorum Listesi</h2>
                    </div>
                </div>
                <div class="card-body">
                    <form method="post" id="CommentForm" action="/Admin/Comment/CommentList">
                        <br />
                        @Html.DropDownListFor(model => model.IsApproved, (List<SelectListItem>)ViewBag.Approve, new { @class = " form-control  col-md-4",onchange="this.form.submit()" })
                    </form>
                    @Html.Partial("CommentDatatable", Model)
                </div>
            </div>
        </div>
    </div>
</div>
