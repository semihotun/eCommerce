@{
    ViewData["Title"] = "BrandList";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutPage.cshtml";
}
<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card ">
                <div class="card-header">
                    <div class="col-md-4" style="float:left;">
                        <h2 class="card-title">Marka Listesi</h2>
                    </div>
                    <div class="col-md-8" style="float:right;">
                            <div class="col-md-3" style="float:right;">
                                 <a href="~/Admin/Brand/BrandCreate" class="btn btn-outline-default pd10-50" style="text-align:center;">Ekle</a>
                            </div>
                    </div>
                </div>
                <div class="card-body">
                    <form method="post" id="BrandFilterForm" action="/Admin/Brand/BrandList">
                        <br />
                        <div class="form-group col-md-6 row">
                            <span class = "control-label col-md-2 ">Marka </span>
                            <div class="col-md-6 ">
                               <input type="text" id="BrandName" class = " form-control" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-6 ">
                                <input type="submit" value="Ara" class="btn btn-default" />
                            </div>
                        </div>
                    </form>
                    @await Html.PartialAsync("BrandDatatable")
                </div>
            </div>
        </div>
    </div>
</div>
