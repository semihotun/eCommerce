@model Entities.ViewModels.WebViewModel.IdentityManage.ChangePasswordViewModel
@{
    ViewData["Title"] = "Change password";
    ViewData.AddActivePage(ManageNavPages.ChangePassword);

}

<h4>Şifre Değiştirme</h4>
<partial name="_StatusMessage" model="Model.StatusMessage"/>

<div class="row">
    <div class="col-md-6">
        <form method="post" asp-antiforgery="true">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                Eski Şifre:
                <input asp-for="OldPassword" class="form-control" />
                <span asp-validation-for="OldPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
              Yeni Şifre :
                <input asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
              Yeni Şifre Tekrar :
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Şifreyi Güncelle</button>
        </form>
    </div>
</div>


