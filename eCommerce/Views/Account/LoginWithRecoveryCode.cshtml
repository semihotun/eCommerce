@model Entities.ViewModels.WebViewModel.IdentityAccount.LoginWithRecoveryCodeViewModel
@{
    ViewData["Title"] = "Recovery code verification";
}
<br />
<br />
<div class="container">
    <h2>@ViewData["Title"]</h2>
    <hr />
    <p>
        Bir kurtarma kodu ile giriş yapmak istediniz. Siz girinceye kadar bu giriş hatırlanmayacak
        girişte bir kimlik doğrulayıcı uygulama kodu veya 2FA'yı devre dışı bırakıp tekrar giriş yapın.
    </p>
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    Kurtarma Kodu: 
                    <input asp-for="RecoveryCode" class="form-control" autocomplete="off" />
                    <span asp-validation-for="RecoveryCode" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-default">Giriş Yap</button>
            </form>
        </div>
    </div>

    @section Scripts {
        @await Html.PartialAsync("_ValidationScriptsPartial")
    }
    </div>