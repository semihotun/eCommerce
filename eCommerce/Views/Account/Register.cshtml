@model Entities.ViewModels.WebViewModel.IdentityAccount.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}
<br /><br />
    <div class="container">
        <h2>Kayıt Ol</h2>
        <div class="row">
            <div class="col-md-4">
                <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                    <h4>Yeni Hesap oluştur.</h4>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        Email :
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        Kullanıcı Adı :
                        <input asp-for="Username" class="form-control" required />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        Ad :
                        <input asp-for="Name" class="form-control" required />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        Soyad :
                        <input asp-for="Surname" class="form-control" required>
                        <span asp-validation-for="Surname" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        Şifre :
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        Tekradan Şifre :
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-default">Kayıt Ol</button>
                </form>
            </div>
        </div>
        @section Scripts {
            @await Html.PartialAsync("_ValidationScriptsPartial")
        }
    </div>