@model Entities.Concrete.AdminUserAggregate.UserForRegisterDto
@{
    Layout = "~/Views/Shared/_AdminLoginRegisterLayout.cshtml";
}

@using (Html.BeginForm("Register", "AdminLogin", FormMethod.Post))
{
    <div class="ml-auto mr-auto justify-content-center w-50">
        <div class="form-group row ">
            <span>Email</span>
            @Html.TextBoxFor(x => x.Email, new { @class = "form-control " })
        </div>
        <div class="form-group row ">
            <span>Password</span>
            @Html.PasswordFor(x => x.Password, new { @class = "form-control " })
        </div>
        <div class="form-group row ">
            <span>İsim</span>
            @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control " })
        </div>
        <div class="form-group row ">
            <span>Soyisim</span>
            @Html.TextBoxFor(x => x.LastName, new { @class = "form-control " })
        </div>
        <div class="form-group row">
            <input type="submit" value="Kayıt Ol" class="customBtn" />
        </div>
    </div>
}
